<UserControl x:Class="ONet.FAU.Rx._16_128.Extension.Views.LD9204S_B_View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ONet.FAU.Rx._16_128.Extension.Views"
             xmlns:VM="clr-namespace:ONet.FAU.Rx._16_128.Extension.ViewModels"
             d:DataContext="{d:DesignInstance Type=VM:LD9204S_B_ViewModel}"
             mc:Ignorable="d" 
            d:DesignHeight="350"
            d:DesignWidth="500">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/DM.Foundation.Styles;component/Themes/Themes.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Border
              Background="White"
              BorderBrush="Black"
              BorderThickness="1"
              CornerRadius="5">
                <StackPanel Margin="12">

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border
                          Padding="8,3"
                          Background="#2980B9"
                          CornerRadius="2">
                            <TextBlock
                              FontWeight="Bold"
                              Foreground="White"
                              Text="四通道光功率计[B]" />
                        </Border>
                    </Grid>

                    <UniformGrid Columns="2" Rows="2">

                        <Border
                          Margin="4"
                          Padding="8"
                          Background="#F8F9F9"
                          BorderBrush="#D5DBDB"
                          BorderThickness="1"
                          CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <DockPanel>
                                    <TextBlock
                                      FontWeight="Bold"
                                      Foreground="#34495E"
                                      Text="CH1" />
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock
                                          VerticalAlignment="Center"
                                          FontSize="11"
                                          Text="波长: " />
                                        <TextBlock
                                          VerticalAlignment="Center"
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Text="{Binding Channels[0].Wavelength, FallbackValue=1310}" />
                                        <TextBlock
                                          VerticalAlignment="Center"
                                          FontSize="11"
                                          Text=" nm" />
                                    </StackPanel>
                                </DockPanel>

                                <Viewbox
                                  Grid.Row="1"
                                  Height="80"
                                  Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="#2E4053"
                                          Text="{Binding Channels[0].RawPowerValue, FallbackValue='-.--'}" />
                                        <TextBlock
                                          Margin="0"
                                          VerticalAlignment="Bottom"
                                          FontSize="6"
                                          Text="{Binding Channels[0].CurrentUnit, FallbackValue='dBm'}" />
                                    </StackPanel>
                                </Viewbox>


                            </Grid>
                        </Border>

                        <Border
                          Grid.Column="1"
                          Margin="4"
                          Padding="8"
                          Background="#F8F9F9"
                          BorderBrush="#D5DBDB"
                          BorderThickness="1"
                          CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <DockPanel>
                                    <TextBlock
                                      FontWeight="Bold"
                                      Foreground="#34495E"
                                      Text="CH2" />
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock FontSize="11" Text="波长: " />
                                        <TextBlock
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Text="{Binding Channels[1].Wavelength, FallbackValue=1310}" />
                                        <TextBlock FontSize="11" Text=" nm" />
                                    </StackPanel>
                                </DockPanel>
                                <Viewbox
                                  Grid.Row="1"
                                 Height="80"
                                  Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="#2E4053"
                                          Text="{Binding Channels[1].RawPowerValue, FallbackValue='-.--'}" />
                                        <TextBlock
                                          Margin="0"
                                          VerticalAlignment="Bottom"
                                          FontSize="6"
                                          Text="{Binding Channels[1].CurrentUnit, FallbackValue='dBm'}" />
                                    </StackPanel>
                                </Viewbox>

                            </Grid>
                        </Border>

                        <Border
                          Grid.Row="1"
                          Margin="4"
                          Padding="8"
                          Background="#F8F9F9"
                          BorderBrush="#D5DBDB"
                          BorderThickness="1"
                          CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <DockPanel>
                                    <TextBlock
                                      FontWeight="Bold"
                                      Foreground="#34495E"
                                      Text="CH3" />
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock FontSize="11" Text="波长: " />
                                        <TextBlock
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Text="{Binding Channels[2].Wavelength, FallbackValue=1310}" />
                                        <TextBlock FontSize="11" Text=" nm" />
                                    </StackPanel>
                                </DockPanel>
                                <Viewbox
                                  Grid.Row="1"
                                  Height="80"
                                  Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="#2E4053"
                                          Text="{Binding Channels[2].RawPowerValue, FallbackValue='-.--'}" />
                                        <TextBlock
                                          Margin="0"
                                          VerticalAlignment="Bottom"
                                          FontSize="6"
                                          Text="{Binding Channels[2].CurrentUnit, FallbackValue='dBm'}" />
                                    </StackPanel>
                                </Viewbox>

                            </Grid>
                        </Border>

                        <Border
                          Grid.Row="1"
                          Grid.Column="1"
                          Margin="4"
                          Padding="8"
                          Background="#F8F9F9"
                          BorderBrush="#D5DBDB"
                          BorderThickness="1"
                          CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <DockPanel>
                                    <TextBlock
                                      FontWeight="Bold"
                                      Foreground="#34495E"
                                      Text="CH4" />
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <TextBlock FontSize="11" Text="波长: " />
                                        <TextBlock
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Text="{Binding Channels[3].Wavelength, FallbackValue=1310}" />
                                        <TextBlock FontSize="11" Text=" nm" />
                                    </StackPanel>
                                </DockPanel>
                                <Viewbox
                                  Grid.Row="1"
                                  Height="80"
                                  Margin="5">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="#2E4053"
                                          Text="{Binding Channels[3].RawPowerValue, FallbackValue='--.--'}" />
                                        <TextBlock
                                          Margin="0"
                                          VerticalAlignment="Bottom"
                                          FontSize="6"
                                          Text="{Binding Channels[3].CurrentUnit, FallbackValue='dBm'}" />
                                    </StackPanel>
                                </Viewbox>

                            </Grid>
                        </Border>
                    </UniformGrid>

                
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>

<UserControl
    x:Class="ONet.FAU.Rx._16_128.Extension.Views.ONetCoupling1DView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:ONet.FAU.Rx._16_128.Extension.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ONet.FAU.Rx._16_128.Extension.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    d:DataContext="{d:DesignInstance Type=VM:ONetCoupling1DViewModel}"
    d:DesignHeight="500"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DM.Foundation.Styles;component/Themes/Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
                </Setter.Value>
            </Setter>
            <Setter Property="WindowStyle" Value="None" />
            <Setter Property="AllowDrop" Value="True" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ShowInTaskbar" Value="False" />
            <Setter Property="SizeToContent" Value="Manual" />
            <Setter Property="Height" Value="500" />
            <Setter Property="Width" Value="800" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Topmost" Value="True" />
            <Setter Property="ShowInTaskbar" Value="False" />
        </Style>
    </prism:Dialog.WindowStyle>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="9*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <!--  标题/关闭按钮  -->
        <Border
            x:Name="TitleToolList"
            Background="{StaticResource Vs2013BlueThemeColor}"
            Cursor="">
            <DockPanel LastChildFill="False">
                <Label
                    Margin="5,0,0,0"
                    Padding="0"
                    VerticalAlignment="Center"
                    Content="{Binding ToolIns.Parameter.ToolName}"
                    DockPanel.Dock="Left"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="Black" />
                <TextBlock VerticalAlignment="Center" Text="&gt;&gt;" />
                <TextBlock
                    Margin="5,0,0,0"
                    Padding="0"
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding ToolIns.Parameter.UserDefined}" />

                <Button
                    Width="30"
                    Height="20"
                    Margin="0,1,2,0"
                    Padding="0"
                    VerticalAlignment="Center"
                    Command="{Binding CancelCommand}"
                    Content="&#xe82a;"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontFamily="{StaticResource MyIconfont}"
                    Foreground="Black"
                    Style="{StaticResource TitleButton}" />


            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="8*" />


            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="参数">

                <StackPanel Grid.Column="0" Margin="5">

                    <Label
                        HorizontalAlignment="Left"
                        Content="用户自定义"
                        FontWeight="Bold" />
                    <TextBox
                        Height="30"
                        Margin="0,0,0,10"
                        Padding="0"
                        VerticalContentAlignment="Center"
                        Foreground="Black"
                        Text="{Binding ToolIns.Parameter.UserDefined, Mode=TwoWay}" />

                    <Label
                        HorizontalAlignment="Left"
                        Content="数据备注"
                        FontWeight="Bold" />
                    <TextBox
                        Height="30"
                        Margin="0,0,0,10"
                        Padding="0"
                        VerticalContentAlignment="Center"
                        Foreground="Black"
                        Text="{Binding ToolIns.Parameter.DataRemark, Mode=TwoWay}" />

                    <Label
                        HorizontalAlignment="Left"
                        Content="弹窗提示"
                        FontWeight="Bold" />
                    <TextBox
                        Height="50"
                        Margin="0,0,0,10"
                        Padding="0"
                        VerticalContentAlignment="Center"
                        Foreground="Black"
                        Text="{Binding ToolIns.Parameter.ToolName, Mode=TwoWay}"
                        TextWrapping="Wrap" />

                    <Label
                        HorizontalAlignment="Left"
                        Content="工具说明"
                        FontWeight="Bold" />
                    <TextBox
                        Height="50"
                        Margin="0,0,0,10"
                        Padding="0"
                        VerticalContentAlignment="Center"
                        Foreground="Black"
                        IsReadOnly="True"
                        Text="{Binding ToolIns.Parameter.ToolDescription}"
                        TextWrapping="Wrap" />
                    <CheckBox Content="弹窗提示" IsChecked="{Binding ToolIns.Parameter.IsDialogShow, Mode=TwoWay}" />
                    <CheckBox Content="是否保存数据" IsChecked="{Binding ToolIns.Parameter.IsSaveData, Mode=TwoWay}" />
                    <CheckBox Content="执行后停止" IsChecked="{Binding ToolIns.Parameter.ExecutionStop, Mode=TwoWay}" />


                </StackPanel>

            </GroupBox>

            <GroupBox Grid.Column="1" Header="配置">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <GroupBox Grid.Column="0" Header="Left">
                        <StackPanel>
                            <Label
                                Padding="0"
                                Content="轴号"
                                FontWeight="Bold" />
                            <ComboBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Foreground="Black"
                                ItemsSource="{Binding AxisList}"
                                SelectedItem="{Binding ToolIns.LeftPara.AxisName, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="扫描范围/mm"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.LeftPara.Range, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="扫描步距/mm"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.LeftPara.StepDist, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="目标值/uA"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.LeftPara.TargetValue, Mode=TwoWay}" />

                            <CheckBox Content="达到目标值是否跳出" IsChecked="{Binding ToolIns.LeftPara.IsJump, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="单步延时/ms"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,0"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.Parameter.Delay, Mode=TwoWay}" />

                            <Label Content="采集通道号" />
                            <ComboBox
                                Height="20"
                                ItemsSource="{Binding Channels}"
                                SelectedItem="{Binding ToolIns.LeftPara.Channel, Mode=TwoWay}" />


                            <GroupBox Header="扫描模式">
                                <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                    <CheckBox
                                        Margin="20,0,0,0"
                                        Content="全行程"
                                        DockPanel.Dock="Left"
                                        IsChecked="{Binding ToolIns.LeftPara.IsAll, Mode=TwoWay}" />
                                </DockPanel>
                            </GroupBox>

                            <!--<GroupBox Header="FA选择">
                              <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                  <ComboBox
                                      MinWidth="120"
                                      ItemsSource="{Binding AxisGroupEnumValues}"
                                      SelectedItem="{Binding ToolIns.LeftPara.Axisgroup, Mode=TwoWay}" />
                              </DockPanel>
                          </GroupBox>-->

                            <GroupBox Header="启用耦合">
                                <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                    <CheckBox
                                        Margin="20,0,0,0"
                                        Content="启用"
                                        DockPanel.Dock="Left"
                                        IsChecked="{Binding ToolIns.LeftPara.Enable, Mode=TwoWay}" />
                                </DockPanel>
                            </GroupBox>
                        </StackPanel>
                    </GroupBox>


                    <GroupBox Grid.Column="1" Header="Right">
                        <StackPanel Grid.Column="0">
                            <Label
                                Padding="0"
                                Content="轴号"
                                FontWeight="Bold" />
                            <ComboBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="0"
                                VerticalContentAlignment="Center"
                                Foreground="Black"
                                ItemsSource="{Binding AxisList}"
                                SelectedItem="{Binding ToolIns.RightPara.AxisName, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="扫描范围/mm"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.RightPara.Range, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="扫描步距/mm"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.RightPara.StepDist, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="目标值/uA"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,10"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.RightPara.TargetValue, Mode=TwoWay}" />

                            <CheckBox Content="达到目标值是否跳出" IsChecked="{Binding ToolIns.RightPara.IsJump, Mode=TwoWay}" />

                            <Label
                                Padding="0"
                                Content="单步延时/ms"
                                FontWeight="Bold" />
                            <TextBox
                                Height="20"
                                Margin="0,0,0,0"
                                Padding="10,0,0,0"
                                VerticalContentAlignment="Center"
                                FontSize="13"
                                FontWeight="Bold"
                                Foreground="#E53E31"
                                Text="{Binding ToolIns.Parameter.Delay, Mode=TwoWay}" />

                            <Label Content="采集通道号" />
                            <ComboBox
                                Height="20"
                                ItemsSource="{Binding Channels}"
                                SelectedItem="{Binding ToolIns.RightPara.Channel, Mode=TwoWay}" />


                            <GroupBox Header="扫描模式">
                                <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                    <CheckBox
                                        Margin="20,0,0,0"
                                        Content="全行程"
                                        DockPanel.Dock="Left"
                                        IsChecked="{Binding ToolIns.RightPara.IsAll, Mode=TwoWay}" />
                                </DockPanel>
                            </GroupBox>

                            <!--<GroupBox Header="FA选择">
                              <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                  <ComboBox
                                      MinWidth="120"
                                      ItemsSource="{Binding AxisGroupEnumValues}"
                                      SelectedItem="{Binding ToolIns.RightPara.Axisgroup, Mode=TwoWay}" />
                              </DockPanel>
                          </GroupBox>-->
                            <GroupBox Header="启用耦合">
                                <DockPanel VerticalAlignment="Center" LastChildFill="False">
                                    <CheckBox
                                        Margin="20,0,0,0"
                                        Content="启用"
                                        DockPanel.Dock="Left"
                                        IsChecked="{Binding ToolIns.RightPara.Enable, Mode=TwoWay}" />
                                </DockPanel>
                            </GroupBox>

                        </StackPanel>
                    </GroupBox>

                </Grid>
            </GroupBox>
        </Grid>

        <!--  底部菜单栏 确认/取消  -->
        <Border Grid.Row="2">
            <DockPanel Margin="2" LastChildFill="False">
                <Button
                    Width="80"
                    Margin="0,0,10,5"
                    Command="{Binding ConfirmCommand}"
                    Content="确认"
                    DockPanel.Dock="Right"
                    Style="{StaticResource WinFormsButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,10,5"
                    Command="{Binding CancelCommand}"
                    Content="取消"
                    DockPanel.Dock="Right"
                    Style="{StaticResource WinFormsButtonStyle}" />
            </DockPanel>
        </Border>


    </Grid>
</UserControl>

<UserControl x:Class="ONet.FAU.Rx._16_128.Extension.Views.OpticalModuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ONet.FAU.Rx._16_128.Extension.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/DM.Foundation.Styles;component/Themes/Themes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border
            Margin="2"
            Background="#F5F5F5"
            BorderBrush="#333"
            BorderThickness="1"
            CornerRadius="3">
            <StackPanel Margin="5">
                <Grid Margin="0,0,0,5">
                    <Border
                        Padding="6,2"
                        HorizontalAlignment="Left"
                        Background="DarkMagenta"
                        CornerRadius="2">
                        <TextBlock
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="光模块四通道电流" />
                    </Border>
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="10"
                        FontStyle="Italic"
                        Foreground="Gray"
                        Text="Current Acquisition Unit" />
                </Grid>

                <!-- 八组选项 -->
                <Border
                    Margin="0,0,0,8"
                    Padding="8,6"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="#666"
                            Text="通道组：" />
                        <UniformGrid  Grid.Column="1" Columns="8" Rows="1">
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组1"
                                FontSize="10"
                                IsChecked="{Binding IsGroup0Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组2"
                                FontSize="10"
                                IsChecked="{Binding IsGroup1Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组3"
                                FontSize="10"
                                IsChecked="{Binding IsGroup2Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组4"
                                FontSize="10"
                                IsChecked="{Binding IsGroup3Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组5"
                                FontSize="10"
                                IsChecked="{Binding IsGroup4Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组6"
                                FontSize="10"
                                IsChecked="{Binding IsGroup5Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组7"
                                FontSize="10"
                                IsChecked="{Binding IsGroup6Selected, Mode=TwoWay}" />
                            <RadioButton
                                Margin="2"
                                GroupName="ChannelGroup"
                                Content="组8"
                                FontSize="10"
                                IsChecked="{Binding IsGroup7Selected, Mode=TwoWay}" />
                        </UniformGrid>
                    </Grid>
                </Border>

                <UniformGrid Columns="2" Rows="2">
                    <Border
                        Margin="2"
                        Padding="6"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#666"
                                Text="CH1" />
                            <StackPanel
                                Grid.Row="1"
                                Margin="0,2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="{Binding Ch1.StatusColor, FallbackValue=Gray}"
                                    Text="{Binding Ch1.Current, FallbackValue=0.0000, StringFormat={}{0:F4}}" />
                                <TextBlock
                                    Margin="2,0,0,6"
                                    VerticalAlignment="Bottom"
                                    FontSize="12"
                                    Foreground="#999"
                                    Text="mA" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border
                        Margin="2"
                        Padding="6"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#666"
                                Text="CH2" />
                            <StackPanel
                                Grid.Row="1"
                                Margin="0,2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="{Binding Ch2.StatusColor, FallbackValue=Gray}"
                                    Text="{Binding Ch2.Current, FallbackValue=0.0000, StringFormat={}{0:F4}}" />
                                <TextBlock
                                    Margin="2,0,0,6"
                                    VerticalAlignment="Bottom"
                                    FontSize="12"
                                    Foreground="#999"
                                    Text="mA" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Margin="2"
                        Padding="6"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#666"
                                Text="CH3" />
                            <StackPanel
                                Grid.Row="1"
                                Margin="0,2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="{Binding Ch3.StatusColor, FallbackValue=Gray}"
                                    Text="{Binding Ch3.Current, FallbackValue=0.0000, StringFormat={}{0:F4}}" />
                                <TextBlock
                                    Margin="2,0,0,6"
                                    VerticalAlignment="Bottom"
                                    FontSize="12"
                                    Foreground="#999"
                                    Text="mA" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border
                        Grid.Row="1"
                        Margin="2"
                        Padding="6"
                        Background="White"
                        BorderBrush="#CCC"
                        BorderThickness="1"
                        CornerRadius="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                FontSize="10"
                                FontWeight="Bold"
                                Foreground="#666"
                                Text="CH4" />
                            <StackPanel
                                Grid.Row="1"
                                Margin="0,2"
                                HorizontalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="32"
                                    FontWeight="Bold"
                                    Foreground="{Binding Ch4.StatusColor, FallbackValue=Gray}"
                                    Text="{Binding Ch4.Current, FallbackValue=0.0000, StringFormat={}{0:F4}}" />
                                <TextBlock
                                    Margin="2,0,0,6"
                                    VerticalAlignment="Bottom"
                                    FontSize="12"
                                    Foreground="#999"
                                    Text="mA" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </UniformGrid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
